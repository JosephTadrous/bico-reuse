<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/ivSolid"
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:background="@color/primary" />

    <TextView
        android:id="@+id/tvProfile"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:background="@color/primary"
        android:fontFamily="@font/poppins_semibold"
        android:text="  Profile"
        android:textColor="#FFFFFF"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="0dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Name"
        android:textColor="#2D3047"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvNameInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/poppins"
        android:text="John Doe"
        android:textColor="@color/primary"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvCollege"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="0dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="College"
        android:textColor="#2D3047"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvCollegeInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/poppins"
        android:text="Swarthmore College"
        android:textColor="@color/primary"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="0dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Email"
        android:textColor="#2D3047"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvEmailInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/poppins"
        android:text="jdoe@swarthmore.edu"
        android:textColor="@color/primary"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="0dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Phone"
        android:textColor="#2D3047"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvPhoneInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/poppins"
        android:text="484-620-2474"
        android:textColor="@color/primary"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnPostsHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="0dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Posts History"
        android:backgroundTint="@color/secondary"
        android:onClick="onClickPostsHistory"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnEdit"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginLeft="290dp"
        android:backgroundTint="@color/secondary"
        android:fontFamily="@font/poppins_semibold"
        android:text="Edit"
        android:onClick="onEditButtonClick" />

</LinearLayout>